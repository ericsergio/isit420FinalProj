CREATE TABLE ListingTypeTbl(			
id	int	PRIMARY KEY,	
name	varchar(12)		
);			
			
CREATE TABLE ManufacturerTbl(			
id	int	PRIMARY KEY,	
name	varchar(65)		
);			
			
CREATE TABLE ShippingCostTypeTbl(			
id	int	PRIMARY KEY,	
name	varchar(65)		
);			
			
CREATE TABLE SportTbl(			
id	int	PRIMARY KEY,	
name	varchar(65)		
);			
			
CREATE TABLE PricingTbl(			
id	int	IDENTITY(1,1)	PRIMARY KEY,
avgsaleall	varchar(65),		
avgsalematchesbaseproduct	varchar(65),		
avgsalematchescardno	varchar(65),		
);			
			
CREATE TABLE ListedProductTbl(			
id	int	PRIMARY KEY,	
sport_fk	int	FOREIGN KEY(sport_fk) REFERENCES SportTbl(id),	
title	varchar(265)	NOT NULL,	
listingtype_fk	int	FOREIGN KEY(listingtype_fk) REFERENCES ListingTypeTbl(id),	
pricing_fk	int	FOREIGN KEY(pricing_fk) REFERENCES PricingTbl(id),	
shippingcosttype_fk	int	FOREIGN KEY(shippingcosttype_fk) REFERENCES ShippingCostTypeTbl(id),	
shippingcost	varchar(25)		
);			
			
CREATE TABLE ProductTbl(			
id	int	IDENTITY(1,1)	PRIMARY KEY,
sport_fk	int	FOREIGN KEY(sport_fk) REFERENCES SportTbl(id),	
year	int	NOT NULL,	
manufacturer_fk	int	FOREIGN KEY(manufacturer_fk) REFERENCES manufacturerTbl(id),	
mainset	varchar(40)	Default 'N',	
subset	varchar(40)	Default 'N',	
playername	varchar(60)	Not Null,	
cardno	varchar(20),		
parallel	varchar(40)	Default 'N',	
rookie	char(1)	Default 'N',	
auto	char(1)	Default 'N',	
serialnumbered	varchar(20)	Default 'N',	
memorabilia	varchar(20)	Default 'N',	
photourl	varchar(250)	Default Null,	
pricing_fk	int	FOREIGN KEY(pricing_fk) REFERENCES PricingTbl(id),	
listedproduct_fk	int	FOREIGN KEY(listedproduct_fk) REFERENCES ListedProductTbl(id)	
);			
